<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avtivity.MyTripsActiivity">
    <LinearLayout
        android:background="@color/yellow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_border"
            android:src="@drawable/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Driver Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RatingBar
            android:textAlignment="center"
            android:layout_marginTop="-10dp"
            android:progressTint="@color/black"
            android:rating="4"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:padding="10dp"
        android:background="@drawable/background_white_corner"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:background="@color/black"
            android:padding="10dp"
            android:src="@drawable/profile_image"
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mytrip_truck_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Ape Piaggio"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking ID :"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mytirps_id_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0570024"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_mytrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03th Dec 2018"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="at"
                    android:textColor="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/time_mytrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="09:28 AM"
                    android:textColor="@color/black"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:background="@drawable/background_white_corner"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:id="@+id/loding_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="5dp"
            android:textSize="14dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/pin_et"
            android:background="@android:color/transparent"
            android:id="@+id/lodingpoint_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loading Point"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/loding_input_layout"
    android:background="@drawable/background_white_corner"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:id="@+id/unloding_input_layouttrip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:padding="5dp"
        android:textSize="14dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/small_placeholder_et"
        android:background="@android:color/transparent"
        android:id="@+id/unlodingpoint_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select your Loading Point"/>
</android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_marginTop="15dp"
        android:layout_below="@id/unloding_input_layouttrip"
        android:padding="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Payment Method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout3"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="3dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="Reviews"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="3dp"
            android:layout_marginLeft="10dp"
            android:text="Good Experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
<Button
    android:layout_alignParentBottom="true"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:text="View Receipt"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="50dp" />

</RelativeLayout>