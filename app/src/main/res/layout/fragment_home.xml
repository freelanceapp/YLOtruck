<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Favourites"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Thanks for your Regular Use"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Loading Point"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/lodingpoint_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trasparent_b"
                android:drawableLeft="@drawable/pin_et"
                android:drawablePadding="5dp"
                android:hint="Add your Loading Point"
                android:padding="3dp"
                android:textSize="12dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Unloading Point"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/unlodingpoint_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/trasparent_b"
                android:drawableLeft="@drawable/small_placeholder_et"
                android:drawablePadding="5dp"
                android:hint="Add your Loading Point"
                android:padding="7dp"
                android:textSize="12dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>